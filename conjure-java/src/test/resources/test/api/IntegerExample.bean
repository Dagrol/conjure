package test.api;

import com.fasterxml.jackson.annotation.JsonIgnoreProperties;
import com.fasterxml.jackson.annotation.JsonProperty;
import java.util.ArrayList;
import java.util.List;
import java.util.Objects;

@JsonIgnoreProperties(
        ignoreUnknown = true
)
public final class IntegerExample {
    private final Integer integer;

    public IntegerExample(@JsonProperty("integer") Integer integer) {
        validateFields(integer);
        this.integer = integer;
    }

    public Integer getInteger() {
        return this.integer;
    }

    @Override
    public boolean equals(Object other) {
        return this == other || (other instanceof IntegerExample && equalTo((IntegerExample) other));
    }

    private boolean equalTo(IntegerExample other) {
        return this.integer.equals(other.integer);
    }

    @Override
    public int hashCode() {
        return Objects.hash(integer);
    }

    private static void validateFields(Integer integer) {
        List<String> missingFields = null;
        missingFields = addFieldIfMissing(missingFields, integer, "integer");
        if (missingFields != null) {
            throw new IllegalStateException("Some required fields have not been set: " + missingFields);
        }
    }

    private static List<String> addFieldIfMissing(List<String> prev, Object fieldValue, String fieldName) {
        List<String> missingFields = prev;
        if (fieldValue == null) {
            if (missingFields == null) {
                missingFields = new ArrayList<>(1);
            }
            missingFields.add(fieldName);
        }
        return missingFields;
    }

    public static Builder builder() {
        return new Builder();
    }

    public static final class Builder {
        private Integer integer;

        public Builder from(IntegerExample other) {
            integer(other.getInteger());
            return this;
        }

        public Builder integer(Integer integer) {
            this.integer = Objects.requireNonNull(integer, "integer cannot be null");
            return this;
        }

        public IntegerExample build() {
            return new IntegerExample(integer);
        }
    }
}
