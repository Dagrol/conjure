{
  "compilerOptions": {
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "removeComments": false,
    "stripInternal": true,
    "target": "es5"
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}

